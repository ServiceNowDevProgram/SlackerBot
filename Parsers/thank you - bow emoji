
var sentence = current.text.replace(/!thank you/gmi, "").trim().toUpperCase();
if (sentence == '') {
	var send_confusion = new x_snc_slackerbot.Slacker().send_chat(current.channel, ':upside_down_face: gimme something to say thanks!', false, '', current.thread_ts);
} else {
	new x_snc_slackerbot.Slacker().send_chat(current, sentence.split(' ').join(' :bow: '), current.thread_ts);
}
