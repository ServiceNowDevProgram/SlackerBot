var sentence = current.text.replace(/!help/gmi, "").trim().toUpperCase();
if (sentence == '') {
	var send_confusion = new x_snc_slackerbot.Slacker().send_chat(current.channel, ':upside_down_face: gimme something to help!', false, '', current.thread_ts);
} else {
	new x_snc_slackerbot.Slacker().send_chat(current, sentence.split(' ').join(' :help: '), current.thread_ts);
}
