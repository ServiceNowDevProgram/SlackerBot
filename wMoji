/*
activation_example:@All
regex:<@U.*>
flags:g
*/
new x_snc_slackerbot.Slacker().send_reaction(current, weeklyMoji());

function weeklyMoji() {
    var weekEmojis = {
        0: 'sunday-funday',
        1: 'monday-blues',
        2: 'taco-tuesday',
        3: 'wacky-wednesday',
        4: 'thankful-thursday',
        5: 'friday-vibes',
        6: 'saturday-chill'
    };

    var day = new Date().getDay();
    return weekEmojis[day];
}
